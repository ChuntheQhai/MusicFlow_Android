<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainMusicItemLayout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >


        <LinearLayout
            android:id="@+id/bottomInfoLayour"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black50"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/home_play" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1379"
                    android:textColor="@android:color/white"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.1"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="0dp">

                <TextView
                    android:id="@+id/txt_add"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="321"
                    android:textColor="@android:color/white"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/btn_like"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:src="@drawable/home_add_music" />

                <TextView
                    android:id="@+id/txt_like"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@android:color/white"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/btn_comment"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:src="@drawable/home_love" />

                <TextView
                    android:id="@+id/txt_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="123"
                    android:textColor="@android:color/white"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/btn_share"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:src="@drawable/home_comment" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/music_image"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/bottomInfoLayour"
            android:scaleType="centerCrop"
            android:src="@drawable/bos" />

        <TextView
            android:id="@+id/music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomInfoLayour"
            android:layout_gravity="bottom|right"
            android:layout_margin="10dp"
            android:background="@color/white80"
            android:padding="5dp"
            android:text="Kissing Together"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home_profile"
                android:id="@+id/userImage"
                android:layout_margin="5dp" />


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/home_favorite"
            android:id="@+id/favouriteImg"
            android:layout_alignTop="@+id/music_image"
            android:layout_alignRight="@+id/music_image"
            android:layout_alignEnd="@+id/music_image"
            android:layout_alignBottom="@+id/textView"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/userName"
            android:layout_toEndOf="@+id/userImage"
            android:layout_alignTop="@+id/music_image"
            android:layout_toLeftOf="@+id/favouriteImg"
            android:layout_toStartOf="@+id/favouriteImg"
            android:layout_toRightOf="@+id/userImage"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:singleLine="true"/>
    </RelativeLayout>
</RelativeLayout>
